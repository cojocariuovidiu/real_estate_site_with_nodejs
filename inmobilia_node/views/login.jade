doctype html
html
	head
		title Inmovilia - Please Login
		link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css', rel='stylesheet')
		link(href='/assets/css/modules/login.css', rel='stylesheet')
	body
		//a(href="https://github.com/braitsch/node-login")
			img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67", alt="Fork me on GitHub", data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png")
	block content


	#login-container
		form( method="post")#login-form.well.span4
			h1 Hello!
			p.subheading Please Login To Your Account
			label Username 
			input(type="text", name="user", id='user-tf').span4.required
			label Password
			input(type="password", name="pass", id='pass-tf').span4.required
			button(type="submit")#btn-login.btn.btn-primary
				i.icon-lock.icon-white
				| Sign in
			//label#remember-me.checkbox Remember Me
				input(type="checkbox", checked='checked')
			div.clear-fix
			hr
			div.btm-links
				a(href='#')#forgot-password Forgot Your Password?
				a(href='/signup')#create-account Create An Account

	include modals/alert
	include modals/lost-password

	block scripts
		script(src='/assets/vendor/jquery.min.js')
		script(src='/assets/vendor/jquery.form.js')
		script(src='/assets/vendor/bootstrap-modal.js')
		script(src='/assets/vendor/bootstrap-transition.js')
		script(src='/assets/js/modules/login/login.js')
		script(src='/assets/js/modules/login/loginController.js')
		script(src='/assets/js/modules/login/loginValidator.js')
		script(src='/assets/js/modules/login/emailValidator.js')